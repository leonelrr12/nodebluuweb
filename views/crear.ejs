<%- include("template/header.ejs", {tituloweb: 'Crear nueva mascota'}) %>

    <div class="container">
        <h1>Crear</h1>
        <form action="/mascotas/crear" class="form-group mt-3" method="POST">
            <input 
                type="text"
                placeholder="Agrear nombre"
                class="form-control mb-3"
                name="nombre"
            >
            <input 
                type="text"
                placeholder="Agrear descripcion"
                class="form-control mb-3"
                name="descripcion"
            >
            <button
                type="submit"
                class="btn btn-success btn-block btn-lg mb-3"
            >
                Agregar
            </button>
        </form>
    </div>
    
